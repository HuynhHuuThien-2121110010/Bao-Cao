@model IEnumerable<MyClass.Models.User>

@{
    ViewBag.Title = "Thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Danh mục sản phẩm</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create","User")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Thêm mới </a>
                        <a href="@Url.Action("Trash","User")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>
                    </div>
                </div>
            </div>
            <div class="m-2">
                @Html.Partial("Message")
                @*@if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" id="successMessage">
                            @TempData["SuccessMessage"]
                        </div>

                    }*@
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px;">#</th>
                            <th class="text-center">Tên Thành Viên</th>
                            <th class="text-center">User name</th>
                            <th class="text-center">Chức vụ</th>
                            <th class="text-center">Ngày tham gia</th>
                            <th class="text-center" style="width:180px;">Chức năng</th>
                            <th class="text-center" style="width:20px;">Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center"></td>
                            <td class="text-center">
                                @item.FullName
                            </td>
                            <td class="text-center">
                                @item.UserName
                            </td>
                            <td class="text-center">
                                @if (item.Roles == 1)
                                {
                                    <p>Quản trị</p>
                                }
                                @if (item.Roles == 2)
                                {
                                    <p>Thành Viên</p>
                                }
                            </td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Created_At)</td>
                            <td class="text-center">
                                <a href="@Url.Action("Details","User", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                                <a href="@Url.Action("Edit","User", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("DeTrash","User", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                @*@Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.Id })*@
                            </td>
                            <td class="text-center">
                                @item.Id
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
    window.onload = function () {
        setTimeout(function () {
            var msg = document.getElementById('successMessage');
            if (msg) {
                msg.style.display = 'none';
            }
        }, 3000); // 5 giây
    }
</script>

