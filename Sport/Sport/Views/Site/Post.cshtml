@model IEnumerable<MyClass.Models.PostInfo>
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using Sport.Libary
<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative">
                    <h2>Tất cả bài viết</h2>
                </div>
                @foreach (var post in Model)
                {
                    <div class="row my-3">
                        <div class="col-md-4">
                            <a href="~/@post.Slug"><img src="~/Public/images/posts/@post.Img" class="img-fluid" alt="..." /></a>
                        </div>
                        <div class="col-md-8">
                            <a href="~/@post.Slug">
                                <h3>@post.Title</h3>
                            </a>
                            <p>@XString.Str_limit(post.Detail, 20)</p>
                            <div class="text-right"><a href="~/@post.Slug">Xem thêm</a></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

